% ====================
% Definitions
% ====================

\definecolor{lightgray}{RGB}{245, 246, 250}
\definecolor{blue}{RGB}{64, 115, 158}
\definecolor{darkblue}{RGB}{39, 60, 117}
\definecolor{lightblue}{RGB}{232, 244, 255}

% ====================
% Definition (UniBas colors)
% ====================
\definecolor{unibasmint}{RGB}{165, 215, 210}
\definecolor{unibasminthell}{RGB}{192, 227, 223}
\definecolor{unibasrot}{RGB}{210, 5, 55}
\definecolor{unibasanthrazit}{RGB}{45, 55, 60}
\definecolor{unibasanthrazithell}{RGB}{70, 80, 90}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=unibasanthrazit}

% Headline
\setbeamercolor{headline}{fg=black,bg=unibasmint}
\setbeamercolor{headline rule}{bg=unibasanthrazithell}

% Block
\setbeamercolor{block title}{fg=unibasanthrazit,bg=white}
\setbeamercolor{block separator}{bg=unibasmint}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=unibasanthrazit,bg=unibasminthell!50}
\setbeamercolor{block alerted separator}{bg=unibasanthrazit}
\setbeamercolor{block alerted body}{fg=black,bg=unibasminthell!50}

% Example Block
\setbeamercolor{block example title}{fg=unibasanthrazit,bg=unibasanthrazithell!10}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=unibasanthrazithell!10}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=unibasmint}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
